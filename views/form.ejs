<html>
    <head>
        <title>New user</title>
        <link rel="stylesheet" href="./styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
        
    </head>
    <body>
        <%-include('./templates/header.ejs', {title: "NEW MESSAGE"}) %>
        <%-include('./templates/navbar.ejs', {name: "Home", link:"/"}) %>
        
        <form method="POST" action="/new">
            <label class="label userName" for="userName">Username:</label>
            <br>
            <input class="userNameBox" name="userName" type="text" placeholder="Username" required>
            <br>
            <label class="label messageText" for="messageText">Message:</label>
            <br>
            <textarea class="msgBox" name="messageText" placeholder="Type your message here." required></textarea>
            <br>
            <input class="submitbtn" type="submit" value="Submit">
        </form>
    </body>
</html>