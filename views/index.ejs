<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="./styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
        
    </head>
    <body>
        <%-include('./templates/header.ejs', {title: title}) %>
        <%-include('./templates/navbar.ejs', {name: "New Message", link:"/new"}) %>
        <%messages.forEach((message)=>{%>
            <div class="messagebox">
            <ul>
                <li><%=message.user%></li>
                <li><%=message.text%></li>
                <li><%=message.added%></li>
            </ul>
            
            
            <a href="/msgDetails/<%=message.user%>?text=<%=message.text%>&added=<%=message.added%>"><button id="openbtn">OPEN</button></a>
            </div>
            <%});%>
        </body>
</html>